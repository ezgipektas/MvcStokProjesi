@using MvcStok.Models.Entity
@model List<TblMusteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>ALERT</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <th>@item.MusteriID</th>
                    <td>@item.MusteriAd</td>
                    <td>@item.MusteriSoyad</td>
                    <td><a href="/Müşteriler/SIL/@item.MusteriID" class="btn btn-danger"> Sil </a></td>
                    <td><a href="/Müşteriler/GUNCELLE/@item.MusteriID" class="btn btn-success"> Güncelle </a></td>
                    <td>@Html.ActionLink("SİL BUTONU", "SIL", new {id=item.MusteriID},new {@class="btn btn-warning",onclick="return confirm('Silmek istediğinize emin misiniz?')"})</td>
                </tr>
            }


</table>
<a href="/Müşteriler/YeniMusteri/" class="btn btn-primary"> Yeni Müşteri Ekle </a>

