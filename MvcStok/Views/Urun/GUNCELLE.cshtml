@model MvcStok.Models.Entity.TblUrunler
@{
    ViewBag.Title = "GUNCELLE";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post">
    <label>Ürün ID</label>
    <input name="UrunID" class="form-control" value="@Model.UrunID" />
    <br />
    <label>Ürün Adı</label>
    <input type="text" name="UrunAd" class="form-control" value="@Model.UrunAd" />
    <br />
    <label>Ürün Markası</label>
    <input type="text" name="Marka" class="form-control" value="@Model.Marka" />
    <br />
    <label>Ürün Kategorisi</label>
    @Html.DropDownListFor(x => x.TblKategoriler.KategoriID, (List<SelectListItem>)ViewBag.v2, new {@class="form-control"})
    @*<input type="text" name="UrunKategori" class="form-control" value="@Model.UrunKategori" />*@
    <br />
    <label>Ürün Fiyatı</label>
    <input type="text" name="Fiyat" class="form-control" value="@Model.Fiyat" />
    <br />
    <label>Ürün Stok</label>
    <input type="text" name="Stok" class="form-control" value="@Model.Stok" />
    <br />
    <button class="btn btn-primary">Kategoriyi Güncelle</button>

</form>

