@using MvcStok.Models.Entity
@model List<TblUrunler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<table id="tbl1" class="table table-bordered">
    <thead>

        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Ürün Kategorisi</th>
            <th>Fiyat</th>
            <th>Kalan Stok</th>
            <th>Sil</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th>@item.UrunID</th>
                <td>@item.UrunAd</td>
                <td>@item.Marka</td>
                <td>@item.TblKategoriler.KategoriAd</td>
                <td>@item.Fiyat</td>
                <td>@item.Stok</td>
                <td><a href="/Urun/SIL/@item.UrunID" class="btn btn-danger"> Sil </a></td>
                <td><a href="/Urun/GUNCELLE/@item.UrunID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </tbody>

</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary"> Yeni Ürün Ekle </a>


