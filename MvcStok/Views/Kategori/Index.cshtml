@using MvcStok.Models.Entity
@model PagedList.IPagedList<TblKategoriler>
    @using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
        @foreach(var item in Model)
            {
                <tr>
                    <th>@item.KategoriID</th>
                    <td>@item.KategoriAd</td>
                    <td><a href="/Kategori/SIL/@item.KategoriID" class="btn btn-danger" > Sil </a></td>
                    <td><a href="/Kategori/GUNCELLE/@item.KategoriID" class="btn btn-success"> Güncelle </a></td>
                </tr>
            }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))
<a href="/Kategori/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

